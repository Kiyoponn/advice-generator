---
export const prerender = true

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='description' content='advice generator web application' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='bg:dark-blue font:antialiased h:100vh'>
    <slot />
  </body>
  <script>
    import MasterCSS from '@master/css'
    import Config from '../../master.css'
    export const css = new MasterCSS(Config)
  </script>
</html>
<style is:global>
  @import '@master/normal.css';

  @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@200;400;600;800&display=swap');

  * {
    font-family: 'Manrope', sans-serif;
  }
</style>
